<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.juank.javafx.parcial3.javafxdbparcial3.controller.LoginController">
   <children>
      <Label text="Login" textAlignment="CENTER">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>

      <VBox alignment="CENTER" spacing="15.0">
         <children>
            <VBox spacing="5.0">
               <children>
                  <Label text="Email:" />
                  <TextField fx:id="emailField" promptText="Enter your email" prefWidth="250.0" />
               </children>
            </VBox>

            <VBox spacing="5.0">
               <children>
                  <Label text="Password:" />
                  <PasswordField fx:id="passwordField" promptText="Enter your password" prefWidth="250.0" />
               </children>
            </VBox>

            <Label fx:id="messageLabel" textAlignment="CENTER" wrapText="true" />

            <Button fx:id="loginButton" onAction="#handleLogin" text="Login" prefWidth="150.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
</VBox>
