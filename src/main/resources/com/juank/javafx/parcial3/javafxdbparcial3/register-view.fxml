<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.juank.javafx.parcial3.javafxdbparcial3.controller.RegisterController">
   <children>
      <Label text="Register New User" textAlignment="CENTER">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Label>

      <VBox alignment="CENTER" spacing="15.0">
         <children>
            <VBox spacing="5.0">
               <children>
                  <Label text="Name:" />
                  <TextField fx:id="nameField" promptText="Enter your full name" prefWidth="250.0" />
               </children>
            </VBox>

            <VBox spacing="5.0">
               <children>
                  <Label text="Email:" />
                  <TextField fx:id="emailField" promptText="Enter your email" prefWidth="250.0" />
               </children>
            </VBox>

            <VBox spacing="5.0">
               <children>
                  <Label text="Password:" />
                  <PasswordField fx:id="passwordField" promptText="Enter password (min 6 chars)" prefWidth="250.0" />
               </children>
            </VBox>

            <VBox spacing="5.0">
               <children>
                  <Label text="Confirm Password:" />
                  <PasswordField fx:id="confirmPasswordField" promptText="Confirm your password" prefWidth="250.0" />
               </children>
            </VBox>

            <Label fx:id="messageLabel" textAlignment="CENTER" wrapText="true" />

            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Button fx:id="registerButton" onAction="#handleRegister" text="Register" prefWidth="100.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
                  <Button fx:id="cancelButton" onAction="#handleCancel" text="Cancel" prefWidth="100.0" style="-fx-background-color: #f44336; -fx-text-fill: white;" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
